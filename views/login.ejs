<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meme Generator</title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class='container'>
          <a href="/login" class="navbar-brand">
          <img src="/assets/memelogo.png" width="40" height="40" alt="" class='mx-2'>
          Meme Generator</a>
          <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navmenu'>
          <span class='navbar-toggler-icon'></span></button>
          <div class='collapse navbar-collapse' id='navmenu'>
            <ul class="navbar-nav ms-auto">
              <li class='nav-item'>
                <a href='' class='nav-link mx-2'>Login</a></li>
                <li class='nav-item'>
                  <a href='/signup' class='nav-link mx-2'>Sign Up</a>
                  </li>
                </a>
              </li>
            </ul>
          </div>
        </container>
      </nav>
      <section class='bg-primary bg-gradient w-100 container-fluid min-vh-100'>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <div class='container p-5 d-flex flex-column justify-content-center align-items-center'>
      <h1 class='pb-3'>Login</h1>
    <form action="/login" method="POST" class='d-flex flex-column '>
        <input type="email" name="email" placeholder="Email" class='mt-1'>
        <input type="password" name="password" placeholder="Password" class='mt-1'>
        <input type="submit" class='btn btn-dark mt-1'>
    </form>
  </div>
</section>
</body>
</html>