<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class='container'>
        <a href="#" class="navbar-brand">
        <img src="/assets/memelogo.png" width="40" height="40" alt="" class='mx-2'>
        Meme Generator</a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navmenu'>
        <span class='navbar-toggler-icon'></span></button>
        <div class='collapse navbar-collapse' id='navmenu'>
          <ul class="navbar-nav ms-auto">
            <li class='nav-item'>
              <a href='/login' class='nav-link mx-2'>Login</a></li>
              <li class='nav-item'>
                <a href='/signup' class='nav-link mx-2'>Sign Up</a>
                </li>
              </a>
            </li>
          </ul>
        </div>
      </container>
    </nav>
    <h1>Todos</h1>
    <ul>
      <% todos.forEach( el => { %>
      <li class="todoItem" data-id="<%=el._id%>">
        <span><%= el.topCaption %></span>
        <img src="<%= el.imageURL %>" />
        <span><%= el.bottomCaption %></span>
      </li>
      <% }) %>
    </ul>

    <h2><%= user.userName %> has <%= left %> things left to do.</h2>

    <form action="/todos/createTodo" method="POST">
      <input type="text" placeholder="Top Caption" name="topCaption" />
      <input type="text" placeholder="Bottom Caption" name="bottomCaption" />
      <input type="file" id="image-file" name="imageUrl" accept="image/*" />
      <input type="hidden" id="base64" name="base64" />
      <img id="preview-img" />
      <input type="submit" />
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
  </body>
</html>
